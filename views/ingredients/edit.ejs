<%- include('../partials/header') %>

<h2>Enter information</h2>
<form action="/ingredients/<%= ingredient.id %>/?_method=PATCH" method="POST">
  <div class="form-group mb-3">
    <label>Name</label>
    <input name="name" value="<%= ingredient.name %>" type="text" class="form-control">
  </div>
  <div class="form-group mb-3">
    <label>Properties</label>
    <textarea name="properties" value="<%= ingredient.properties %>" class="form-control" aria-label="With textarea"></textarea>
  </div>
  <div class="form-group mb-3">
    <label>Serving Size</label>
    <input name="serving" value="<%= ingredient.serving %>" type="number" class="form-control">
  </div>
  
  
  <div class="card">
    <div class="card-header">
        Nutrients
    </div>
    <div class="card-body p-3">
        <div class="form-group mb-2">
          <label>Calories</label>
          <input name="kcal" value="<%= ingredient.kcal %>" type="number" class="form-control" placeholder="KCalories/100grs">
        </div>
        <div class="form-group mb-2">
            <label>Protein</label>
            <input name="protein" value="<%= ingredient.protein %>" type="number" class="form-control" placeholder="Protein/100grs">
        </div>
        <div class="form-group mb-2">
            <label>Carbohydrates</label>
            <input name="carbs" value="<%= ingredient.carbs %>" type="number" class="form-control" placeholder="Carbohydrates/100grs">
        </div>
        <div class="form-group mb-2">
            <label>Fat</label>
            <input name="fat" value="<%= ingredient.fat %>" type="Number" class="form-control" placeholder="Fat/100grs">
        </div>
    </div>
  </div>
  <div class="form-group mt-2">
    <label>Image</label>
    <input name="image" value="<%= ingredient.image %>" type="text" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary m-2">Save Ingredient</button>
</form>

<%- include('../partials/footer') %>