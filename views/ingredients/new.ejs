<%- include('../partials/header') %>

<h2>Enter information</h2>
<form action="/ingredients" method="POST">
  <div class="form-group mb-3">
    <label for="input1">Name</label>
    <input name="name" type="text" class="form-control" placeholder="Ingredient name">
  </div>
  <div class="form-group mb-3">
    <label for="input1">Calories</label>
    <input name="nutrients.kcal" type="number" class="form-control" placeholder="KCalories/100grs">
  </div>
  
  <div class="card">
    <div class="card-header">
        Nutrients
    </div>
    <div class="card-body p-3">
        <div class="form-group">
            <label for="input1">Protein</label>
            <input name="nutrients.protein" type="number" class="form-control" placeholder="Protein/100grs">
        </div>
        <div class="form-group">
            <label for="input2">Carbohydrates</label>
            <input name="nutrients.carbs" type="number" class="form-control" placeholder="Carbohydrates/100grs">
        </div>
        <div class="form-group">
            <label for="input2">Fat</label>
            <input name="nutrients.fat" type="name" class="form-control" placeholder="Fat/100grs">
        </div>
    </div>
  </div>
  <p>Upload image</p>
  <button type="submit" class="btn btn-primary m-2">Add Ingredient</button>
</form>

<%- include('../partials/footer') %>